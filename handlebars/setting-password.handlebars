<!DOCTYPE html>
<html lang="en">

{{>base/head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>layout/header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					<div class="nav-fixed">
						{{>layout/nav logged=true active="Setting"}}

						{{>layout/footer footer="small"}}
					</div>
				</div>

				<div class="grid-col -wide">

					<!-- setting -->
					<div class="setting box">
						<h2 class="title">Change Password</h2>
						<form action="setting.html">
							<div class="user-form">
								<div class="user-form-row">
									{{>component/input type="password" label="Current Password" name="current-password"}}
									{{>component/input type="password" label="New Password" name="new-password"}}
									{{>component/input type="password" label="Confirm New Password" name="confirm-new-password" txthint="Password must contain at least 8 characters."}}
								</div>
								<div class="user-form-action">
									{{>component/button type="submit" name="btn-save-user" class="-primary" label="Save"}}
								</div>
							</div>		
						</form>
					</div>

				</div>

				<div class="grid-col -aside">
					{{>layout/sidebar}}
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>module/panel_alert}}

	</div>
	<!-- e: root -->

	<!-- emoji source -->
	<div id="emoji">
		{{>component/emoji}}
	</div>

	<!-- nav add post -->
	{{>module/nav_add_post}}

{{>base/js}}
</body>
</html>
