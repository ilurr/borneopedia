<!DOCTYPE html>
<html lang="en">

{{>base/head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>layout/header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					<div class="nav-fixed">
						{{>layout/nav logged=true active="News"}}

						{{>layout/footer footer="small"}}
					</div>
				</div>

				<div class="grid-col -wide">

					<!-- filter -->
					{{>module/filter type="news" channel=submenu.news active="Filter"}}

					<!-- feeds -->
					<div class="feed-setting">
						<section class="feed box">
							<div class="feed-setting-lead">You have to follow at least 2.</div>
							<div class="feed-setting-list">
								{{#each people}}
								{{#eq type compare="news"}}
								<div class="feed-setting-item">
									<label for="filter-news-{{hyphenate (lowercase (dashcase first_name))}}">
										<div class="feed-setting-row">
											<div class="feed-setting-col">
												<div class="feed-setting-img">
													<img src="{{avatars.[0].url}}" alt="">	
												</div>
												<div class="feed-setting-text">{{first_name}}</div>
											</div>
											<div class="feed-setting-toggle form-toggle">
												<input name="filter-news-{{hyphenate (lowercase (dashcase first_name))}}" id="filter-news-{{hyphenate (lowercase (dashcase first_name))}}" type="checkbox" autocomplete="off"{{#if subscribed}} checked="checked"{{/if}}>
												<span></span>
											</div>
										</div>
									</label>
								</div>
								{{else}}
								{{/eq}}
								{{/each}}
							</div>
						</section>
					</div>

				</div>

				<div class="grid-col -aside">
					{{>layout/sidebar}}
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>module/panel_alert}}

	</div>
	<!-- e: root -->

	<!-- emoji source -->
	<div id="emoji">
		{{>component/emoji}}
	</div>

	<!-- nav add post -->
	{{>module/nav_add_post}}

{{>base/js}}
</body>
</html>
