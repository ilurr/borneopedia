<!DOCTYPE html>
<html lang="en">

{{>base/head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>layout/header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					<div class="nav-fixed">
						{{>layout/nav logged=true}}

						{{>layout/footer footer="small"}}
					</div>
				</div>

				<div class="grid-col -wide">

					<!-- filter -->
					{{>module/filter type="notification" channel=submenu.notification active="Notification"}}

					<!-- notification -->
					<div class="notify-list">
						<section class="notify box">
							{{#each people}}
							{{#gte @index compare=0}}
							{{#gte @index compare=14}}
							{{else}}
							{{#or qna neoblog}}
							{{#not draft}}
							<div class="notify-item{{#eq @index compare=1}} unread{{/eq}}">
								<a href="{{link}}">
									<div class="notify-row">
										<div class="notify-img">
											<img src="{{avatars.[0].url}}" alt="{{avatars.first_name}}">
										</div>
										<div class="notify-col">
											<div class="notify-content">
												<span>{{first_name}} {{last_name}}</span> 
												{{#if post}} commented on your post <strong>"{{truncateWords (sanitize post) 10}}..."</strong> {{/if}}
												{{#if answer}} answered on your question <strong>"{{truncateWords (sanitize answer) 10}}..."</strong> {{/if}}
												{{#if unanswered}} requested an answer from a question <strong>"{{truncateWords (sanitize question) 10}}..."</strong> {{/if}}
											</div>
											<div class="notify-time">20 minutes ago</div>
										</div>
									</div>
								</a>
							</div>
							{{/not}}
							{{/or}}
							{{/gte}}
							{{/gte}}
							{{/each}}
						</section>
					</div>

					{{>component/more type="button" label="Load more"}}

				</div>

				<div class="grid-col -aside">
					{{>layout/sidebar}}
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>module/panel_alert}}

	</div>
	<!-- e: root -->

	<!-- emoji source -->
	<div id="emoji">
		{{>component/emoji}}
	</div>

	<!-- nav add post -->
	{{>module/nav_add_post}}

{{>base/js}}
</body>
</html>
