<!DOCTYPE html>
<html lang="en">

{{>base/head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>layout/header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					<div class="nav-fixed">
						{{>layout/nav logged=true}}

						{{>layout/footer footer="small"}}
					</div>
				</div>

				<div class="grid-col -wide">

					<!-- people -->
					<div class="people box">
						<!-- tab -->
						<div class="tab-block">
							<ul class="tab-header" role="tablist">
								<li role="presentation" class="tab-item active">
									<a href="#user-following" aria-controls="following tab list" role="tab" data-toggle="tab">Following</a>
								</li>
								<li role="presentation" class="tab-item">
									<a href="#user-followers" aria-controls="followers tab list" role="tab" data-toggle="tab">Followers</a>
								</li>
							</ul>
						</div>
						<!-- tab content -->
						<div class="tab-content">
							<div id="user-following" class="tab-panel active" role="tabpanel">
								<!-- following -->
								<div class="people-block">
									<div class="people-list">
										{{>module/people_list channel=people index_start=0 index_end=20}}
									</div>
								</div>
								{{>component/more type="button" label="Load more"}}
							</div>
							<div id="user-followers" class="tab-panel" role="tabpanel">
								<!-- followers -->
								<div class="people-block">
									{{>component/notes content="You have no follower yet."}}
								</div>
							</div>
						</div>
					</div>

				</div>

				<div class="grid-col -aside">
					{{>layout/sidebar}}
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>module/panel_alert}}

	</div>
	<!-- e: root -->

	<!-- emoji source -->
	<div id="emoji">
		{{>component/emoji}}
	</div>

	<!-- nav add post -->
	{{>module/nav_add_post}}

{{>base/js}}
</body>
</html>
