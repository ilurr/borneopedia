<!DOCTYPE html>
<html lang="en">

{{>base/head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>layout/header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					<div class="nav-fixed">
						{{>layout/nav logged=true active="News"}}

						{{>layout/footer footer="small"}}
					</div>
				</div>

				<div class="grid-col -wide">

					<!-- figure detail -->
					<div class="feed-detail">
						<section class="feed box">
						{{#each people}}
						{{#gte @index compare=10}}
						{{#gte @index compare=11}}
						{{else}}
						<div class="feed-block -{{type}}">
							<div class="feed-content">
								{{>component/feed/content_col timeline="detail"}}
								{{>component/feed/content timeline=timeline}}
							</div>
							{{>component/feed/interact type=type unanswered=unanswered link=link}}
							{{>component/feed/comment timeline="detail"}}
							{{>component/feed/footer timeline="detail"}}
						</div>
						{{/gte}}
						{{/gte}}
						{{/each}}
						</section>
					</div>

				</div>

				<div class="grid-col -aside">
					{{>layout/sidebar}}
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>module/panel_alert}}

	</div>
	<!-- e: root -->

	<!-- emoji source -->
	<div id="emoji">
		{{>component/emoji}}
	</div>

	<!-- nav add post -->
	{{>module/nav_add_post}}

{{>base/js}}
</body>
</html>
