<form action="index-signup-result.html">
	{{>component/input type="text" label="Full Name" name="name"}}
	{{>component/input type="text" label="Email Address" name="email" txterror="Email format that you've entered is invalid" txthint="Email format that you've entered is invalid"}}
	{{>component/input type="password" label="Password" name="password" txthint="Password must contain at least 8 characters."}}
	{{>component/select type="select" label="Gender" name="gender" option="Male,Female" placeholder="-" selected="Male" txthint="This field must be filled"}}
	{{>component/textarea label="Address" name="address"}}
	<div class="form-row">
		<img src="https://www.lab-informatika.com/wp-content/uploads/2019/12/recaptcha.gif" alt="">
	</div>
	<div class="form-row">
		<div class="text-center">
			<p>By signing up you are agreeing to our <a href="static-terms.html">Terms of Services</a>.</p>
			<p>View our <a href="static-privacy.html">Privacy Policy</a>.</p>
		</div>
	</div>
	{{>component/button type="submit" label="Agree and Sign up" name="signup" class="-primary"}}
</form>
