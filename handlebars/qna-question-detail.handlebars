<!DOCTYPE html>
<html lang="en">

{{>base/head font="link"}}

<body>
	<!-- s: root -->
	<div class="root">

		{{>layout/header login=true}}
		
		<!-- grid -->
		<div class="grid">

			<div class="grid-flex">

				<div class="grid-col -nav">
					<div class="nav-fixed">
						{{>layout/nav logged=true active="Q&A"}}

						{{>layout/footer footer="small"}}
					</div>
				</div>

				<div class="grid-col -wide">

					<!-- filter -->
					{{>module/filter type="qna" channel=submenu.qna active="Recent"}}

					<!-- qna question -->
					<div class="feed-question">
						<section class="feed">
							<div class="feed-block">
								<div class="feed-content">
									<h1 class="feed-title">
										Apakah mungkin suatu negara memiliki pertumbuhan ekonomi yang tinggi namun tingkat inflasinya rendah?
										<span>By Kiki Ramadhani</span>
									</h1>
									{{!-- <div class="feed-subtitle">Question by <a href="profile.html">Lasya Tamusyu</a>, 1 hour ago</div> --}}
									{{!-- <div class="feed-time"><span>5 Answers</span>, 19 hours ago</div> --}}
								</div>
								{{>component/feed/interact_draft qna_action=true}}
								{{>component/feed/inline_form}}
							</div>
						</section>
					</div>

					<!-- qna answer list -->
					<div class="feed-list">
						{{#each people}}
						{{#eq type compare="qna"}}
						{{#if unanswered}}
						{{else}}
						<section class="feed box">
							{{>module/feed timeline="index" disable_question=true show_answered=true limit=40}}
						</section>
						{{/if}}
						{{else}}
						{{/eq}}
						{{/each}}
					</div>

					{{>component/more type="button" label="Load more"}}

				</div>

				<div class="grid-col -aside">
					{{>layout/sidebar}}
				</div>

			</div>

		</div>

		<!-- notify message -->
		{{>module/panel_alert}}

	</div>
	<!-- e: root -->

	<!-- emoji source -->
	<div id="emoji">
		{{>component/emoji}}
	</div>

	<!-- nav add post -->
	{{>module/nav_add_post}}

{{>base/js}}
</body>
</html>
