<!DOCTYPE html>
<html lang="en">

{{>base/head font="link"}}

<body class="mobile">

	<!-- smartbanner -->
	{{>component/smartbanner}}

	<!-- s: root -->
	<div class="root">

		<section class="cover">
			<div class="cover-logo">
				<img src="../asset/images/logo-{{lowercase base.title}}.svg" alt="{{base.title}}" width="275" height="46">
			</div>
			<h1 class="cover-title">Borneopedia</h1>
			<h2 class="cover-lead">Everything About Borneo</h2>
			<div class="cover-img">
				<img src="../asset/images/welcome-cover.png" alt="{{base.title}}">
			</div>
		</section>

		<section class="about-cover">
			<div class="about-box">
				<div class="about-content">
					<h1 class="static-title">FAQ</h1>
					<article class="static-content">
					</article>
					<section class="static-faq">
						<div class="panel-group" id="accordionFAQ" role="tablist" aria-multiselectable="true">
							{{#each static.[1].content}}
							<div class="panel panel-default">
								<div class="panel-heading" role="tab" id="heading{{add @index 1}}">
									<h4 class="panel-title">
										<a role="button" data-toggle="collapse" class="collapsed" href="#collapse{{add @index 1}}" aria-expanded="false" aria-controls="collapse{{add @index 1}}">
											{{ask}}
										</a>
									</h4>
								</div>
								<div id="collapse{{add @index 1}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{add @index 1}}">
									<div class="panel-body">
										{{content}}
									</div>
								</div>
							</div>
							{{/each}}
						</div>
					</section>
				</div>
			</div>
		</section>

		<section class="service-cover">
			<div class="service-cover-bg" style="background-image: url('../asset/images/welcome-mockup.png');"></div>
			<h3 class="service-teaser">Aplikasi Lengkap tentang Kalimantan</h3>
		</section>
		
		<footer class="footer-cover">
			<div class="footer-cover-box">
				<div class="footer-cover-top">
					<nav class="footer-nav" aria-label="Footer">
						<ul>
							{{#each static}}
							<li><a href="{{link}}" role="link" aria-label="{{title}}">{{title}}</a></li>
							{{/each}}
						</ul>
					</nav>
					<div class="footer-copy">Â© {{base.footer.year}} {{base.footer.title}}</div>
				</div>
				<div class="footer-cover-bottom">
					{{>module/app_widget}}
				</div>
			</div>
		</footer>

	</div>
	<!-- e: root -->

{{>base/js}}
<script src="./asset/js/smart-banner.js"></script>
</body>
</html>
